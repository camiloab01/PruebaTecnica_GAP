@model IEnumerable<SuperZapatos_Client.Models.StoreModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>@Html.ActionLink("Crear Tienda", "Create", "Stores")</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Ver Artículos", "ByStore", "Articles", new { storeId = item.Id }, null)
        </td>
        <td>
            @Html.ActionLink("Borrar Tienda", "Delete", "Stores", new { id = item.Id }, null)
        </td>
        <td>
            @Html.ActionLink("Editar Tienda", "Edit", "Stores", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Volver", "Index", "Home")
</div>
